<% include ../partials/head %>
<div class="container">
	<% if(message && !error){ %>
	<div class="alert alert-success alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<%= message %>
	</div>
	<% } else if(message){ %>
	<div class="alert alert-danger alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<%= message %>
	</div>
	<% } %>
	<div class="page-header">
		<h1>Settings</h1>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading">
			<h1 class="panel-title">PSK Generator</h1>
		</div>
		<div class="panel-body">
			<form id="submit" method="post" action="<%=base_url%>">
				<fieldset class="form-group">
					<label for="oldPassword">PSK emplacement</label>
					<input type="test" name="pskEmplacement" class="form-control" id="pskEmplacement" placeholder="PSK Emplacement" value="<%=pskFile%>" readonly>
				</fieldset>
				<fieldset class="form-group">
					<label for="oldPassword">PSK Key</label>
					<input type="test" name="psk" class="form-control" id="psk" placeholder="PSK Key" value="<%=value%>">
				</fieldset>
			</form>
			<form id="generate" method="post" action="<%=base_url%>/generate">
			</form>
			<button id="btnSubmit" class="btn btn-primary">Submit</button>
			<button id="btnGenerate" class="btn btn-success">Generate</button>
			<script>
				var form = document.getElementById("generate");
				var submitForm = document.getElementById("submit");
				
				document.getElementById("btnGenerate").addEventListener("click", function () {
					form.submit();
				});
				document.getElementById("btnSubmit").addEventListener("click", function () {
					submitForm.submit();
				});
			</script>
		</div>
	</div>
</div>
<% include ../partials/foot %>
